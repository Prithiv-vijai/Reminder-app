<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:background="@color/background_color"
    android:layout_height="match_parent">

    <!-- Water glass image view -->

    <!-- Plus button to increase count -->

    <!-- Text view to display count -->


    <CheckBox
        android:id="@+id/exerciseCheckBox"
        android:layout_width="247dp"
        android:layout_height="48dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/neww"
        android:text="Exercise 45 min"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/sleepCheckBox"
        android:layout_width="233dp"
        android:layout_height="48dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/neww"
        android:text="Sleep 6-8 hrs"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseCheckBox" />

    <CheckBox
        android:id="@+id/readCheckBox"
        android:layout_width="231dp"
        android:layout_height="60dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/neww"
        android:textColor="@android:color/black"
        android:text="Read 30 min"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sleepCheckBox" />

    <CheckBox
        android:id="@+id/socializeCheckBox"
        android:layout_width="231dp"
        android:layout_height="54dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/neww"
        android:textColor="@android:color/black"
        android:text="Socialize 30 min"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/readCheckBox" />

    <CheckBox
        android:id="@+id/journalingCheckBox"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/neww"
        android:textColor="@android:color/black"
        android:text="Journaling 30 min"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/socializeCheckBox" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="156dp"
        android:fontFamily="@font/neww"
        android:textColor="@android:color/black"
        android:text="Refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journalingCheckBox" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="455dp"
        android:layout_height="57dp"
        android:layout_marginStart="56dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/neww"
        android:text="DAILY CHALLENGE"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
